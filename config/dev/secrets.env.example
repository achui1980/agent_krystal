# Krystal Environment Variables - Development
# Copy to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# SFTP Configuration (for development/testing)
SFTP_HOST=localhost
SFTP_PORT=22
SFTP_USERNAME=devuser
SFTP_PASSWORD=devpassword
SFTP_REMOTE_BASE_PATH=/uploads/dev

# API Configuration
API_BASE_URL=https://dev-api.example.com
API_TOKEN=dev-api-token

# Report Configuration
REPORT_OUTPUT_PATH=reports/
REPORT_FORMAT=markdown
