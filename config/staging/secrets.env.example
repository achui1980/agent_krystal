# Krystal Environment Variables - Staging
# Copy to secrets.env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# SFTP Configuration
SFTP_HOST=staging-sftp.example.com
SFTP_PORT=22
SFTP_USERNAME=staging-user
# Use either password or private key
SFTP_PASSWORD=staging-password
# SFTP_PRIVATE_KEY=/path/to/staging/ssh/key

# API Configuration
API_BASE_URL=https://staging-api.example.com
API_TOKEN=staging-api-token

# Report Configuration
REPORT_OUTPUT_PATH=reports/
REPORT_FORMAT=markdown
