# Krystal Environment Variables - Production
# Copy to secrets.env and fill in your actual values
# ⚠️  WARNING: Never commit production secrets to version control!

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-your-production-openai-api-key-here
OPENAI_MODEL=gpt-4o

# SFTP Configuration
SFTP_HOST=prod-sftp.example.com
SFTP_PORT=22
SFTP_USERNAME=prod-user
# For production, use SSH key instead of password
SFTP_PRIVATE_KEY=/secure/path/to/production/ssh/key
# SFTP_PASSWORD=prod-password  # Not recommended for production

# API Configuration
API_BASE_URL=https://api.example.com
API_TOKEN=production-api-token

# Report Configuration
REPORT_OUTPUT_PATH=reports/
REPORT_FORMAT=markdown
